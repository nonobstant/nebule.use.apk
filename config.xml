<?xml version='1.0' encoding='utf-8'?>
<widget id="nonobstant.nebuleuse.lux" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>nebule.us/e</name>
    <description>
        web.poem
    </description>
    <author email="nonobstant@luxminima.com" href="https://luxminima.com">
        nonobstant
    </author>
    <content src="index.html" />
    <preference name="Fullscreen" value="true" />
    <preference name="BackgroundColor" value="0xFF000000"/>
    <preference name="Orientation" value="portrait" />
    <icon src="res/icons/icon.png" />

    <!-- Icon -->
    <platform name="android">
      <icon src="res/icons/icon-ldpi.png" density="ldpi" />
      <icon src="res/icons/icon-mdpi.png" density="mdpi" />
      <icon src="res/icons/icon-hdpi.png" density="hdpi" />
      <icon src="res/icons/icon-xhdpi.png" density="xhdpi" />
    </platform>

    <!-- Splash Screen -->
    <platform name="android">
      <splash src="res/screen/splash-hdpi.png" density="port-hdpi"/>
      <splash src="res/screen/splash-ldpi.png" density="port-ldpi"/>
      <splash src="res/screen/splash-mdpi.png" density="port-mdpi"/>
      <splash src="res/screen/splash-xhdpi.png" density="port-ximg"/>
    </platform>

    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <access origin="*" />
    
    <!-- Plugin -->
    <plugin name="NetworkStatus" value="org.apache.cordova.NetworkManager" />
</widget>
