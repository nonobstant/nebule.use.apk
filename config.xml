<?xml version='1.0' encoding='utf-8'?>
<widget id="nonobstant.nebuleuse.lux" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>nebule.us/e</name>
    <description>
        web.poem
    </description>
    <author email="nonobstant@luxminima.com" href="https://luxminima.com">
        nonobstant
    </author>
    <content src="index.html" />
    <preference name="Fullscreen" value="true" />
    <preference name="BackgroundColor" value="0xFF000000"/>
    <preference name="Orientation" value="portrait" />
    <icon src="res/icons/icon.png" />

    <!-- Icon -->
    <platform name="android">
      <icon src="res/icons/icon-ldpi.png" density="ldpi" />
      <icon src="res/icons/icon-mdpi.png" density="mdpi" />
      <icon src="res/icons/icon-hdpi.png" density="hdpi" />
      <icon src="res/icons/icon-xhdpi.png" density="xhdpi" />
    </platform>

    <!-- Splash Screen -->
    <platform name="android">
      <icon background="res/screen/splash-hdpi.png" density="ldpi" foreground="res/icon/android/ldpi-foreground.png" />
      <icon background="res/screen/splash-ldpi.png" density="mdpi" foreground="res/icon/android/mdpi-foreground.png" />
      <icon background="res/screen/splash-mdpi.png" density="hdpi" foreground="res/icon/android/hdpi-foreground.png" />
      <icon background="res/screen/splash-xhdpi.png" density="xhdpi" foreground="res/icon/android/xhdpi-foreground.png" />
      <icon background="res/icon/android/xxhdpi-background.png" density="xxhdpi" foreground="res/icon/android/xxhdpi-foreground.png" />
      <icon background="res/icon/android/xxxhdpi-background.png" density="xxxhdpi" foreground="res/icon/android/xxxhdpi-foreground.png" />
    </platform>

    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <access origin="*" />

    <!-- Plugin -->

    <feature name="NetworkStatus">
      <param name="android-package" value="org.apache.cordova.NetworkManager" />
    </feature>
</widget>
